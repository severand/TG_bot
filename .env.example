# Telegram Bot Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration (optional - either OpenAI or Replicate required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Replicate Configuration (optional - either OpenAI or Replicate required)
REPLICATE_API_TOKEN=your_replicate_api_token_here
REPLICATE_MODEL=openai/gpt-5

# Primary LLM Provider (openai or replicate)
# Will fallback to the other if primary fails
LLM_PROVIDER=openai

# Logging
LOG_LEVEL=INFO

# File Limits (in bytes)
MAX_FILE_SIZE=20971520  # 20 MB
MAX_ARCHIVE_SIZE=104857600  # 100 MB

# Response Handling
RESPONSE_THRESHOLD=3  # Number of messages before generating .docx

# Temporary Directory
TEMP_DIR=./temp
